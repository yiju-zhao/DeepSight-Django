{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "vitest.setup.ts",
    "src/test-utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}